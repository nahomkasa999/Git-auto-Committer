{
	"name": "autogitcommiter",
	"displayName": "autogitcommiter",
	"description": "A tool to automate commit message generation",
	"version": "0.0.2",
	"publisher": "nahom-kasa",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"main": "./dist/extension.js",
	"activationEvents": [
		"onCommand:esbuild-sample.generateCommitMessage"
	],
	"contributes": {
		"commands": [
			{
				"command": "esbuild-sample.hello-esbuild",
				"title": "Hello esbuild"
			},
			{
				"command": "esbuild-sample.generateCommitMessage",
				"title": "Generate Commit Message"
			}
		],
		"keybindings": [
			{
				"command": "esbuild-sample.generateCommitMessage",
				"key": "alt+o",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"check-types": "tsc --noEmit",
		"lint": "eslint"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/estree": "^1.0.7",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"@types/vscode": "^1.73.0",
		"esbuild": "^0.25.0",
		"eslint": "^9.13.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
	"dependencies": {
		"@google/generative-ai": "^0.24.0",
		"dotenv": "^16.5.0"
	}
}
